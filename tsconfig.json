{
  "compilerOptions": {
    "jsx": "react-jsx",          // ✅ Required
    "lib": ["dom", "esnext"],    // ✅ Helps JSX + browser API
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}


